                    <form action="/adicionar/categoria" method="post">
                        <div class="mb-3">
                            <label for="nome" class="form-label fw-semibold">Nome da categoria</label>
                            <input type="text" class="form-control form-control-lg" name="nome"
                                placeholder="Digite o nome da categoria" required pattern="[A-Za-zÃ€-Ã¿\s]+"
