<div class="container py-5">
    <h1 class="mb-4 text-center fw-bold text-primary">üìã Lista de Vendedores</h1>

    {{#if vendedores}}
    <div class="table-responsive shadow rounded">
        <table class="table table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>

                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Tipo de Usu√°rio</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each vendedores}}
                <tr>

                    <td class="fw-semibold">{{this.nome}}</td>
                    <td>{{this.email}}</td>
                    <form action="/editar/vendedor" method="post">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <td>
                            <select name="tipo_usuario">
                                <option value="vendedor"> {{this.tipo_usuario}} </option>
                                <option value="cliente">cliente</option>
                            </select>
                        </td>
                        <td><button class="btn btn-primary">Editar tipo do usuario</button></td>
                        <td><a href="/vendedor/detalhes/{{this.id}}">Detalhes do vendedor</a></td>

                </tr>
                </form>

                {{/each}}
            </tbody>
        </table>
    </div>
    {{else}}
    <div class="alert alert-warning text-center fw-bold">
        ‚ö†Ô∏è Nenhum vendedor cadastrado.
    </div>
    {{/if}}



    {{#if msg_success}}
    <div class="alert alert-success text-center mt-4 fw-bold">
        Usu√°rio atualizado!
    </div>
    {{/if}}


    <div class="text-center mt-4">
        <a href="/painel/admin" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>





<script>

    setTimeout(() => {
        const flash = document.getElementById("flash-message");

        if (flash) {

            setTimeout(() => flash.remove(), 500);
        }

    }, 3000)
</script>